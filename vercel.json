{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "src": "/sitemap.xml", "dest": "https://localyse-backend-production.up.railway.app/sitemap.xml" },
    { "src": "/robots.txt", "dest": "https://localyse-backend-production.up.railway.app/robots.txt" },
    { "src": "/(.*\\..*)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
